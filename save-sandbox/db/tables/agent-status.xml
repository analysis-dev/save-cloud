<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="agent_status-1" author="frolov" context="dev or prod">
        <createTable tableName="agent_status">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="state" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="DATETIME(3)">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="DATETIME(3)">
                <constraints nullable="false"/>
            </column>
            <column name="agent_id" type="bigint">
                <constraints foreignKeyName="fk_agent_status_agent" references="agent(id)" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>