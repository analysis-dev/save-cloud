<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="cosv-file-1" author="nulls">
        <createTable tableName="cosv_file">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="identifier" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="DATETIME(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="cosv_file" columnNames="identifier,modified" constraintName="uq_osv_file"/>
    </changeSet>

    <changeSet id="cosv-file-2" author="nulls">
        <addColumn tableName="cosv_file">
            <column name="vulnerability_metadata_id" type="bigint">
                <constraints foreignKeyName="fk_cosv_file_vulnerability_metadata" references="vulnerability_metadata(id)" nullable="false" deleteCascade="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>