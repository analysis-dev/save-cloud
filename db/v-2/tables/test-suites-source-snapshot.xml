<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="test-suites-source-snapshot-1" author="nulls" context="dev or prod">
        <createTable tableName="test_suites_source_snapshot">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="source_id" type="bigint">
                <constraints foreignKeyName="fk_test_suites_source_snapshot_source" references="test_suites_source(id)" deleteCascade="true" nullable="false"/>
            </column>
            <column name="commit_id" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="commit_time" type="DATETIME(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="test_suites_source_snapshot" columnNames="source_id,commit_id" constraintName="uq_test_suites_source_snapshot"/>
    </changeSet>

</databaseChangeLog>