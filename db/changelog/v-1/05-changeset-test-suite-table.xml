<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="add-test-suite-table" author="aktsay" context="dev or prod">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="test_suite"/>
            </not>
        </preConditions>
        <createTable tableName="test_suite">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="bigint">
                <constraints foreignKeyName="fk_test_suite_project" references="project(id)" nullable="false"/>
            </column>
            <column name="date_added" type="DATETIME">
                <constraints nullable="false" />
            </column>
        </createTable>

        <rollback>
            <dropTable
                    cascadeConstraints="true"
                    tableName="test_suite" />
        </rollback>
    </changeSet>

</databaseChangeLog>