<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="add-test-table" author="aktsay" context="dev or prod">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="test"/>
            </not>
        </preConditions>
        <createTable tableName="test">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="expected_file_path" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="test_file_path" type="varchar(255)" />
            <column name="date_added" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="test_suite_id" type="bigint">
                <constraints foreignKeyName="fk_test_test_suite" references="test_suite(id)" nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable
                    cascadeConstraints="true"
                    tableName="test" />
        </rollback>
    </changeSet>

</databaseChangeLog>